<p id="notice"><%= notice %></p>

<h1>Question Items</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_items.each do |question_item| %>
      <tr>
        <td><%= question_item.question %></td>
        <td><%= question_item.content %></td>
        <td><%= link_to 'Show', question_item %></td>
        <td><%= link_to 'Edit', edit_question_item_path(question_item) %></td>
        <td><%= link_to 'Destroy', question_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question Item', new_question_item_path %>
